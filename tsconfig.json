{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "src/tests",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "watch": true
  },
  "include": [
    "src/app/modules/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/app/interfaces"
  ]
}